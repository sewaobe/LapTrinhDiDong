<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Hình ảnh sinh viên sử dụng CircleImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_student"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile_image" />

        <!-- TextView để hiển thị thông tin sinh viên -->
        <TextView
            android:id="@+id/tv_student_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_student"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="\t\t\t\t\t\t\t Nguyễn Phúc Bảo - 22110285 \n Sinh viên trường đại học Sư Phạm Kỹ Thuật TPHCM" />

        <!-- EditText để người dùng nhập mảng số -->
        <EditText
            android:id="@+id/et_input_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_student_info"
            android:layout_marginTop="20dp"
            android:hint="Nhập các số cách nhau bằng dấu phẩy"
            android:inputType="text" />

        <!-- Button để xử lý mảng số -->
        <Button
            android:id="@+id/btn_process_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_input_numbers"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Xử lý mảng số" />

        <!-- TextView để hiển thị kết quả -->
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_process_numbers"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <!-- EditText để người dùng nhập chuỗi để đảo ngược -->
        <EditText
            android:id="@+id/et_input_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_result"
            android:layout_marginTop="20dp"
            android:hint="Nhập chuỗi ký tự" />

        <!-- Button để đảo ngược chuỗi -->
        <Button
            android:id="@+id/btn_reverse_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_input_string"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Đảo ngược chuỗi" />

        <!-- TextView để hiển thị chuỗi đảo ngược -->
        <TextView
            android:id="@+id/tv_reversed_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_reverse_string"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>